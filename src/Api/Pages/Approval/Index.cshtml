@page
@model Enterprise.Documentation.Api.Pages.Approval.IndexModel
@{
    ViewData["Title"] = "Document Approvals";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .approval-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .document-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            margin-bottom: 1rem;
            transition: box-shadow 0.15s ease-in-out;
        }
        .document-card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .document-type-badge {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
        }
        .status-pending {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }
        .btn-approve {
            background-color: #28a745;
            border-color: #28a745;
        }
        .btn-approve:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
        .btn-reject {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-reject:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
    </style>
</head>
<body>
    <div class="approval-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-4 mb-0">
                        <i class="fas fa-clipboard-check"></i>
                        Document Approvals
                    </h1>
                    <p class="lead">Review and approve generated documentation</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i>
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        Pending Approvals 
                        <span class="badge bg-primary">@Model.PendingDocuments.Count</span>
                    </h2>
                    <a href="/swagger" class="btn btn-outline-secondary">
                        <i class="fas fa-code"></i>
                        API Documentation
                    </a>
                </div>

                @if (Model.PendingDocuments.Any())
                {
                    @foreach (var document in Model.PendingDocuments)
                    {
                        <div class="document-card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h5 class="card-title mb-2">
                                            @document.Title
                                        </h5>
                                        <div class="mb-2">
                                            <span class="badge document-type-badge bg-info">
                                                @document.DocumentType
                                            </span>
                                            <span class="badge status-pending">
                                                @document.Status
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i>
                                            Created: @document.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                                            <br>
                                            <i class="fas fa-user"></i>
                                            By: @document.CreatedBy
                                            @if (!string.IsNullOrEmpty(document.FilePath))
                                            {
                                                <br>
                                                <i class="fas fa-file-word"></i>
                                                @System.IO.Path.GetFileName(document.FilePath)
                                            }
                                        </small>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <div class="btn-group" role="group">
                                            @if (!string.IsNullOrEmpty(document.FilePath))
                                            {
                                                <a href="?handler=Download&id=@document.Id" 
                                                   class="btn btn-outline-primary" 
                                                   download>
                                                    <i class="fas fa-download"></i>
                                                    Download Document
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-secondary" disabled>
                                                    <i class="fas fa-exclamation-triangle"></i>
                                                    File Not Found
                                                </button>
                                            }
                                            <button type="button" 
                                                    class="btn btn-approve text-white"
                                                    onclick="approveDocument('@document.Id')">
                                                <i class="fas fa-check"></i>
                                                Approve
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-clipboard-check" style="font-size: 4rem; color: #6c757d;"></i>
                        </div>
                        <h3 class="text-muted">No Documents Awaiting Approval</h3>
                        <p class="text-muted">All documents have been reviewed and processed.</p>
                        <a href="/swagger" class="btn btn-primary mt-3">
                            <i class="fas fa-plus"></i>
                            Generate New Documents
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
	async function approveDocument(id) {
		if (!confirm('Are you sure you want to approve this document?')) return;
		
		try {
			const response = await fetch(`/api/approvals/${id}/approve`, {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify({
					isApproved: true,
					approvedBy: 'System',
					comments: 'Approved via dashboard'
				})
			});
			
			const result = await response.json();
			
			if (result.success) {
				alert('Document approved!');
				location.reload();
			} else {
				alert('Failed: ' + (result.error || result.message));
			}
		} catch (error) {
			alert('Error: ' + error.message);
		}
	}
    </script>
</body>
</html>
