@page
@model Enterprise.Documentation.Api.Pages.Approval.DetailsModel
@{
    ViewData["Title"] = "Document Approval Details";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .approval-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        .document-content {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 1.5rem;
            margin: 1rem 0;
            max-height: 400px;
            overflow-y: auto;
        }
        .approval-actions {
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 1.5rem;
            position: sticky;
            top: 20px;
        }
        .btn-approve {
            background-color: #28a745;
            border-color: #28a745;
        }
        .btn-approve:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
        .btn-reject {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-reject:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
    </style>
</head>
<body>
    <div class="approval-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="/approval" class="text-white-50">
                                    <i class="fas fa-clipboard-check"></i> Approvals
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-white" aria-current="page">
                                Document Details
                            </li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-0">Document Review</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i>
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Document != null)
        {
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title mb-0">@Model.Document.Title</h3>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <strong>Document Type:</strong>
                                    <span class="badge bg-info ms-2">@Model.Document.DocumentType</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Status:</strong>
                                    <span class="badge bg-warning ms-2">@Model.Document.Status</span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <strong>Created:</strong> @Model.Document.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                                </div>
                                <div class="col-md-6">
                                    <strong>Created By:</strong> @Model.Document.CreatedBy
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <strong>Version:</strong> @Model.Document.Version
                                </div>
                                <div class="col-md-6">
                                    <strong>Document ID:</strong> 
                                    <code>@Model.Document.Id</code>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-file-alt"></i>
                                Document Content
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="document-content">
                                <pre>@Model.Document.Content</pre>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="approval-actions">
                        <h4 class="mb-3">
                            <i class="fas fa-tasks"></i>
                            Approval Actions
                        </h4>

                        <form method="post">
                            <div class="mb-3">
                                <label for="ApprovalComments" class="form-label">Comments</label>
                                <textarea class="form-control" 
                                          id="ApprovalComments" 
                                          name="ApprovalComments" 
                                          rows="4" 
                                          placeholder="Enter your review comments (optional)"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" 
                                        class="btn btn-approve text-white"
                                        asp-page-handler="Approve"
                                        asp-route-id="@Model.Document.Id"
                                        onclick="return confirm('Are you sure you want to approve this document?')">
                                    <i class="fas fa-check"></i>
                                    Approve Document
                                </button>

                                <button type="submit" 
                                        class="btn btn-reject text-white"
                                        asp-page-handler="Reject"
                                        asp-route-id="@Model.Document.Id"
                                        onclick="return confirm('Are you sure you want to reject this document?')">
                                    <i class="fas fa-times"></i>
                                    Reject Document
                                </button>

                                <a href="/approval" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i>
                                    Back to Approval Queue
                                </a>
                            </div>
                        </form>

                        <hr class="my-3">

                        <div class="text-center">
                            <a href="/api/documents/@Model.Document.Id" 
                               class="btn btn-outline-primary btn-sm"
                               target="_blank">
                                <i class="fas fa-code"></i>
                                View API Response
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle" style="font-size: 4rem; color: #6c757d;"></i>
                </div>
                <h3 class="text-muted">Document Not Found</h3>
                <p class="text-muted">The requested document could not be found or you don't have permission to view it.</p>
                <a href="/approval" class="btn btn-primary mt-3">
                    <i class="fas fa-arrow-left"></i>
                    Back to Approval Queue
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>