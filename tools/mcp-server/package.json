{
  "name": "enterprise-docs-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Enterprise Documentation Platform V2 - Provides codebase access, git operations, testing, building, and specialist prompts",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "enterprise-docs-mcp": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:stdio": "set TRANSPORT=stdio && node dist/index.js",
    "start:sse": "set TRANSPORT=sse && node dist/index.js",
    "dev": "npx tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.0"
  }
}
